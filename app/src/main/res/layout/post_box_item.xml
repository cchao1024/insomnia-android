<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.cchao.insomnia.model.javabean.post.PostListVO"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_16"
        android:paddingTop="@dimen/dp_16"
        android:paddingEnd="@dimen/dp_16">

        <ImageView
            android:id="@+id/avatar"
            url="@{item.postUserAvatar}"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/avatar"
            android:text="@{`@`+item.postUserName}"
            android:textColor="@color/black"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_alignStart="@+id/user_name"
            android:layout_marginTop="@dimen/dp_10"
            android:text="@{item.content}"
            android:textSize="@dimen/sp_18"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_alignStart="@+id/user_name"
            android:layout_marginTop="@dimen/dp_10"
            android:textColor="@color/text_999"
            android:textSize="@dimen/sp_12"
            tools:text="@string/app_name"/>

        <TextView
            android:id="@+id/comment_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/content"
            android:layout_toEndOf="@+id/date"
            android:padding="@dimen/dp_10"
            android:text="评论"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/sp_12"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/comment_button"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/post_like_disable"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="@{String.valueOf(item.likeCount)}"
                android:textColor="@color/text_666"
                tools:text="@string/app_name"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:drawableStart="@drawable/post_comment"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:text="@{String.valueOf(item.reviewCount)}"
                android:textColor="@color/text_666"
                tools:text="@string/app_name"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </RelativeLayout>
</layout>